{% extends 'layout/base_header_double_height.html.twig' %}

{% block body %}

  <div class="uk-width-medium-8-10 uk-container-center">
    <div class="md-card md-card-single">
      <div class="md-card-toolbar">
        <h3 class="md-card-toolbar-heading-text large uk-margin-small-left">
          {{ 'attendanceprofessor.new.title'|trans }}
        </h3>
      </div>
			<div class="md-card-content">
        <div class="uk-margin-small-top">
          {{ form_start(form) }}

          <div class="uk-grid uk-margin-medium-bottom" data-uk-grid-margin>
            <div class="uk-width-1-2">
							<div class="uk-form-row">
								<label class="uk-form-label">{{ form_label(form.division) }}</label>
								{{ form_widget(form.division)}}
								<div class="parsley-errors-list filled uk-text-danger">
									{{ form_errors(form.division) }}
								</div>
							</div>
            </div>
            <div class="uk-width-1-2">
              <div class="uk-form-row">
                <label class="uk-form-label">{{ form_label(form.professor) }}</label>
                {{ form_widget(form.professor)}}
                <div class="parsley-errors-list filled uk-text-danger">
                  {{ form_errors(form.professor) }}
                </div>
              </div>
            </div>
          </div>
					<div class="uk-form-row uk-input-group">
            <span class="uk-input-group-addon">
              <i class="md-list-addon-icon material-icons md-24">&#xE916;</i>
            </span>
						<label class="uk-form-label">{{ form_label(form.date) }}</label>
						{{ form_widget(form.date)}}
						<div class="parsley-errors-list filled uk-text-danger">
							{{ form_errors(form.date) }}
						</div>
					</div>
          <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
            <div class="uk-width-1-2">
              <div class="uk-form-row">
                <label class="uk-form-label">{{ form_label(form.status) }}</label>
                {{ form_widget(form.status)}}
                <div class="parsley-errors-list filled uk-text-danger">
                  {{ form_errors(form.status) }}
                </div>
              </div>
            </div>
            <div class="uk-width-1-2">
              <div class="uk-form-row">
                <label class="uk-form-label">{{ form_label(form.session) }}</label>
                {{ form_widget(form.session)}}
                <div class="parsley-errors-list filled uk-text-danger">
                  {{ form_errors(form.session) }}
                </div>
              </div>
            </div>
            {{ form_widget(form) }}

            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  {% endblock %}
{% block javascripts %}
	{{ parent() }}
	{% include 'filter/professor_attendance_filter.html.twig' %}
{% endblock %}
