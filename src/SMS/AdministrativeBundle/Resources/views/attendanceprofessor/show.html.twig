{% extends 'layout/base.html.twig' %}
{% block heading_actions %}
  <a href="{{ path('attendance_professor_show' , { 'id' : professor.id }) }}">
    <i class="md-icon material-icons">&#xE5D5;</i>
  </a>
	<a href="{{ path('attendance_professor_new') }}">
    <i class="md-icon material-icons">&#xE88A;</i>
  </a>
{% endblock %}
{% block title_page %}
  {{ 'attendance.list.title'|trans }}
{% endblock %}

{% block sub_title_page %}
  <p class="uk-text-bold uk-margin-small-top">
    {{professor}}
  </p>
{% endblock %}
{% block sticky_button %}
  <a class="md-fab md-fab-primary" href="{{ url('attendanceprofessor_index', {'id' : professor.id}) }}">
    <i class="material-icons">&#xE145;</i>
  </a>
{% endblock %}
{% block body %}
<div class="md-card">
  <div class="md-card-toolbar">
    <h3 class="md-card-toolbar-heading-text">
      {{ 'attendance_professor.stats.name'|trans }}
    </h3>
  </div>
  <div class="md-card-content">
    {% if echarts is empty %}
      <div class="echart-large">
        <span class="chart_icon">
          <i class="material-icons">&#xE88B;</i>
          <h1 class="uk-text-large">{{ 'attendance_professor.stats.not_found'|trans }}</h1>
        </span>
      </div>
    {% else %}
        <div data-echarts-bar data-values='{{ echarts|json_encode|raw }}' class="echart-large"></div>
    {% endif %}
  </div>
</div>
<div class="md-card uk-margin-medium-bottom">
		<div class="md-card-content">
				{{ datatable_render(attendanceProfessors) }}
		</div>
</div>
{% endblock %}

{% block head_javascripts %}
  {{ parent() }}
  <!-- page specific plugins -->
  <!-- datatables -->
  <script src="{{ asset('assets/plugins/datatables/js/jquery.dataTables.min.js')}}"></script>
  <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
  <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
  <!--  form file input functions -->
  <!-- uikit functions -->
  <script src="{{ asset('assets/js/uikit_custom.min.js')}}"></script>

  <script src="{{ asset('assets/js/moment-with-locales.min.js')}}"></script>
{% endblock %}
{% block javascripts %}
  <!-- altair common functions/helpers -->
  <script src="{{ asset('assets/js/altair_admin_common.min.js')}}"></script>
  <!-- datatables custom integration -->
  <script src="{{ asset('assets/js/custom/datatables/datatables.uikit.min.js')}}"></script>
  <script src="{{ asset('assets/js/uikit_custom_dataTable.js')}}"></script>
  <script src="{{ asset('assets/plugins/chart/echarts.min.js')}}"></script>
  <script src="{{ asset('assets/plugins/easypiechart/jquery.easypiechart.min.js')}}"></script>
  <!-- page specific plugins -->
  {% include '@SMSAdministrative/attendanceprofessor/echarts.html.twig' %}
{% endblock %}
