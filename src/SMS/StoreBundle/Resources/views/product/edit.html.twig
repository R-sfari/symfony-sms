{% extends 'layout/base.html.twig' %}

{% block title_page %}
 {{ product.productName }}
{% endblock %}
{% block sub_title_page %}
	{{ product.status }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <!-- additional styles for plugins -->
  <!-- dropify -->
  <link rel="stylesheet" href="{{ asset('assets/skins/dropify/css/dropify.css')}}">
{% endblock %}
{% block body %}
  {{ form_start(form) }}
  <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
    <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
      <div class="md-card">
        <div class="md-card-content">
          <div class="uk-float-right">
            {{ form_widget(form.active)}}
          </div>
          <label class="uk-display-block uk-margin-small-top">
            {{ form_label(form.active)}}
          </label>
        </div>
      </div>
				<div class="md-card">
	        <div class="md-card-toolbar">
	          <h3 class="md-card-toolbar-heading-text">
	            {{ "product.field.image"|trans }}
	          </h3>
	        </div>
	        <div class="md-card-content">
						<div class="uk-form-row">
							{{ form_widget(form.imageFile)}}
							<div class="parsley-errors-list filled uk-text-danger">
								{{ form_errors(form.imageFile) }}
							</div>
						</div>
	        </div>
	      </div>
    </div>
    <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
      <div class="md-card">
        <div class="md-card-toolbar">
          <h3 class="md-card-toolbar-heading-text">
            {{ "product.show.title"}}
          </h3>
        </div>
        <div class="md-card-content large-padding">
          <div class="uk-grid uk-grid-divider uk-margin-medium-top uk-grid-medium" data-uk-grid-margin>
            <div class="uk-width-large-1-2">
							<div class="uk-form-row">
								<label class="uk-form-label">{{ form_label(form.productName) }}</label>
								{{ form_widget(form.productName)}}
								<div class="parsley-errors-list filled uk-text-danger">
									{{ form_errors(form.productName) }}
								</div>
							</div>
							<div class="uk-form-row">
								<label class="uk-form-label">{{ form_label(form.status) }}</label>
								{{ form_widget(form.status)}}
								<div class="parsley-errors-list filled uk-text-danger">
									{{ form_errors(form.status) }}
								</div>
							</div>
							<div class="uk-form-row">
								<label for="product_edit_color_control" class="uk-form-label">{{ form_label(form.productType) }}</label>
								{{ form_widget(form.productType)}}
								<div class="parsley-errors-list filled uk-text-danger">
									{{ form_errors(form.productType) }}
								</div>
							</div>
            </div>
            <div class="uk-width-large-1-2">
							<div class="uk-form-row uk-input-group">
								<span class="uk-input-group-addon">
									<i class="md-list-addon-icon material-icons md-24">&#xE227;</i>
								</span>
								<label class="uk-form-label">{{ form_label(form.price) }}</label>
								{{ form_widget(form.price)}}
								<div class="parsley-errors-list filled uk-text-danger">
									{{ form_errors(form.price) }}
								</div>
							</div>
							<div class="uk-form-row uk-input-group">
								<span class="uk-input-group-addon">
										<i class="uk-icon-cubes"></i>
								</span>
								<label class="uk-form-label">{{ form_label(form.stock) }}</label>
								{{ form_widget(form.stock)}}
								<div class="parsley-errors-list filled uk-text-danger">
									{{ form_errors(form.stock) }}
								</div>
							</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
	<div class="md-fab-wrapper">
		{{ form_widget(form.save , { "attr" : { "class" : "md-fab md-fab-primary"}})}}
	</div>
  {{ form_widget(form) }}

  {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <!-- page specific plugins -->
  <!-- file input -->
  <script src="{{ asset('assets/plugins/dropify/dist/js/dropify.min.js')}}"></script>
  <script>
    $(function() {
      $(".dropify").dropify({
        'defaultFile': "{{ vich_uploader_asset(product, 'imageFile') }}",
				"height" : 300 ,
				"width": 240,
        messages: {
          "default": "{{ 'file.upload_file'|trans }}",
          replace: "{{ 'file.upload_file'|trans }}",
          remove: "{{ 'delete'|trans }}"
        }
      });
    });
  </script>
{% endblock %}
