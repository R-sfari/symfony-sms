{% extends 'layout/base.html.twig' %}

{% block heading_actions %} 
  <a href="{{ path('orderuser_index') }}">
    <i class="md-icon material-icons">&#xE5C4;</i>
  </a>
  <a href="{{ path('orderuser_new') }}">
    <i class="md-icon material-icons">&#xE5C8;</i>
  </a>
{% endblock %} 

{% block sticky_button %}
<a class="md-fab md-fab-primary" href="{{ path('orderuser_edit', { 'id': orderUser.id }) }}">
    <i class="material-icons">&#xE254;</i>
</a>
{% endblock %}

{% block title_page %} 
 {{ 'orderuser.show.title'|trans }}
{% endblock %}

{% block body %}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>

        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'orderuser.show.detail'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list">
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{{ orderUser.id }}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'orderuser.field.id'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{{ orderUser.price }}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'orderuser.field.price'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{{ orderUser.quantity }}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'orderuser.field.quantity'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{% if orderUser.state %}Yes{% else %}No{% endif %}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'orderuser.field.state'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{% if orderUser.created %}{{ orderUser.created|date('Y-m-d H:i:s') }}{% endif %}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'orderuser.field.created'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{% if orderUser.updated %}{{ orderUser.updated|date('Y-m-d H:i:s') }}{% endif %}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'orderuser.field.updated'|trans }}</span>
                    </li>                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'author.info'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list md-list-addon">
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE7FD;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">{{ orderUser.user.username }}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.creator'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8DF;</i>
                            </div>
                            <div class="md-list-content"><span class="md-list-heading">{% if orderUser.created %}{{ orderUser.created|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.updated'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8B5;</i>
                            </div>
                            <div class="md-list-content"><span class="md-list-heading">{% if orderUser.created %}{{ orderUser.created|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.created'|trans }}</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
