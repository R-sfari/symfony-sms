{% extends "@SMSUser/layout.html.twig" %}

{% block body %}
    <div class="md-card-content large-padding" id="login_form">
        <div class="login_heading">
            <div class="user_avatar"></div>
        </div>

        <form action="{{ path('login') }}" method="post">

            <div class="md-input-wrapper {{ last_username|length > 0 ? "md-input-filled" : ""}}">
                <label for="login_username">{{ 'user.field.username'|trans  }}</label>
                <input class="md-input" type="text" id="username" name="_username" value="{{ last_username }}"  />
            </div>
            <div class="md-input-wrapper">
                <label for="login_password">{{ 'user.field.password'|trans  }}</label>
                <input class="md-input" type="password" id="password" name="_password" />
            </div>

            {% if error %}
                <div class="uk-text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="uk-margin-medium-top">
                <button type="submit" class="md-btn md-btn-primary md-btn-block md-btn-large">
                    {{ "login.submit"|trans }}
                </button>
            </div>


            <div class="uk-margin-top">
                <a href="{{ path('resetting') }}" id="login_help_show" class="uk-float-right">
                    {{ "login.help_show"|trans}}
                </a>
                <span class="icheck-inline">
                    <input type="checkbox" id="remember_me" name="_remember_me" data-md-icheck />
                    <label for="login_page_stay_signed" class="inline-label">
                        {{ "login.stay_signed"|trans}}
                    </label>
                </span>
            </div>
        </form>
    </div>
{% endblock %}
