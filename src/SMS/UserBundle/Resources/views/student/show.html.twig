{% extends 'layout/base_no_header.html.twig' %}

{% block sticky_button %}
  <a class="md-fab md-fab-primary" href="{{ path('student_edit', { 'id': student.id }) }}">
    <i class="material-icons">&#xE254;</i>
  </a>
{% endblock %}

{% block title_page %}
  {{ 'student.show.title'|trans }}
{% endblock %}

{% block body %}
  <div class="uk-grid" data-uk-grid-margin data-uk-grid-match id="user_profile">
    <div class="uk-width-large-7-10">
      <div class="md-card">
        <div class="user_heading">
          <div class="user_heading_avatar">
            <div class="fileinput-new thumbnail">
              {% if student.imageName %}
                <img src="{{ vich_uploader_asset(student, 'imageFile') }}" alt="{{ student.imageName }}"/>
              {% else %}
                <img src="{{ asset('assets/img/avatars/user@2x.png') }}" alt="user avatar"/>
              {% endif %}
            </div>
          </div>
          <div class="user_heading_content">
            <h2 class="heading_b uk-margin-bottom">
              <span class="uk-text-truncate">{{ student.username }}</span>
              <span class="sub-heading">{{ student.firstName }}
                {{ student.lastName }}</span>
            </h2>
          </div>
          <div class="md-fab-wrapper">
            <a class="md-fab md-fab-small md-fab-success" href="{{ path('student_index') }}">
              <i class="material-icons">&#xE88A;</i>
            </a>
          </div>
          <div class="md-fab-wrapper">
            {% if app.user.id == student.id %}
            <a class="md-fab md-fab-small md-fab-success" href="{{ path('student_edit', { 'id': student.id }) }}">
              <i class="material-icons">&#xE15A;</i>
            </a>
            {% else %}
            <a class="md-fab md-fab-small md-fab-success" href="{{ path('student_index') }}">
              <i class="material-icons">&#xE88A;</i>
            </a>
            {% endif %}
          </div>
        </div>
        <div class="user_content">
          <div class="uk-margin-medium-bottom">
            <ul class="uk-tab">
              <li  class="uk-active">
                <a href="{{ path("student_show" , { "id" : student.id})}}">{{ "student.show.title"|trans}}</a>
              </li>
              <li>
                <a href="{{ path("user_payment_show" , { "id" : student.id})}}">{{ "payment.show.detail"|trans}}</a>
              </li>
              <li>
                <a href="{{ path("user_registration_show" , { "id" : student.id})}}">{{ "registration.show.detail"|trans}}</a>
              </li>
            </ul>
          </div>
          <h3 class="full_width_in_card heading_c">{{ 'user.show.general_info'|trans }}</h3>
          <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
            <div class="uk-width-large-1-2">
              <ul class="md-list">
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.firstName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'student.field.firstName'|trans }}</span>
                  </div>
                </li>
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.gender|trans }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'student.field.gender'|trans }}</span>
                  </div>
                </li>

              </ul>
            </div>
            <div class="uk-width-large-1-2">
              <ul class="md-list">
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.lastName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'student.field.lastName'|trans }}</span>
                  </div>
                </li>
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">
                      {% if student.birthday %}{{ student.birthday|date('d/m/Y') }}{% endif %}
                    </span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'student.field.birthday'|trans }}</span>
                  </div>
                </li>
              </ul>
            </div>

          </div>
          {% if student.studentParent %}
          <h3 class="full_width_in_card heading_c">{{ 'user.show.parent_info'|trans }}</h3>
          <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
            <div class="uk-width-large-1-2">
              <ul class="md-list">
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.studentParent.fatherName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.fatherName'|trans }}</span>
                  </div>
                </li>
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.studentParent.fatherProfession }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.fatherProfession'|trans }}</span>
                  </div>
                </li>

                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.studentParent.familyName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.familyName'|trans }}</span>
                  </div>
                </li>
              </ul>
            </div>
            <div class="uk-width-large-1-2">
              <ul class="md-list">
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.studentParent.motherName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.motherName'|trans }}</span>
                  </div>
                </li>
                <li>
                  <div class="md-list-content">

                    <span class="md-list-heading uk-text-large">{{ student.studentParent.motherProfession }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.motherProfession'|trans }}</span>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          {% endif %}
          <h3 class="full_width_in_card heading_c">{{ 'user.show.school_info'|trans }}</h3>
          <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
            <div class="uk-width-large-1-2">
              <ul class="md-list md-list-addon">
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE80C;</i>
                    </div>
                    <span class="md-list-heading uk-text-large">{{ student.establishment }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'user.field.establishment'|trans }}</span>
                  </div>
                </li>
                {% if student.section %}
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE885;</i>
                    </div>

                    <span class="md-list-heading uk-text-large">{{ student.section.grade.gradeName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'student.field.grade'|trans }}</span>
                  </div>
                </li>
                {% endif %}
              </ul>
            </div>
            <div class="uk-width-large-1-2">
              <ul class="md-list md-list-addon">
                {% if student.section %}
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE86E;</i>
                    </div>

                    <span class="md-list-heading uk-text-large">{{ student.section.sectionName }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'user.field.section'|trans }}</span>
                  </div>
                </li>
                {% endif %}
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE242;</i>
                    </div>

                    <span class="md-list-heading uk-text-large">{{ student.recordeNumber }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'student.field.recordeNumber'|trans }}</span>
                  </div>
                </li>
              </ul>
            </div>
          </div>

          <h3 class="full_width_in_card heading_c">{{ 'user.show.contact_info'|trans }}</h3>
          <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
            <div class="uk-width-large-1-2">
              <ul class="md-list md-list-addon">
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE0BE;</i>
                    </div>

                    <span class="md-list-heading uk-text-large">{{ student.email }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'user.field.email'|trans }}</span>
                  </div>
                </li>

              </ul>
            </div>

            <div class="uk-width-large-1-2">
              <ul class="md-list md-list-addon">
                {% if student.studentParent %}
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE55F;</i>
                    </div>

                    <span class="md-list-heading uk-text-large">{{ student.studentParent.address }}</span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.address'|trans }}</span>
                  </div>
                </li>
                {% endif %}
                <li>
                  <div class="md-list-content">
                    <div class="md-list-addon-element">
                      <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
                    </div>

                    <span class="md-list-heading uk-text-large">{{ student.phone }}
                    </span>
                    <span class="uk-text-small uk-text-muted uk-display-block">
                      {{'studentparent.field.phone'|trans }}</span>
                  </div>
                </li>
              </ul>
            </div>

          </div>
        </div>
      </div>
    </div>
    <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
      <div class="md-card">
        <div class="md-card-content">
          <ul class="md-list md-list-addon">
            <li>
              <div class="md-list-addon-element">
                <i class="md-list-addon-icon material-icons">&#xE7FD;</i>
              </div>
              <div class="md-list-content">
                <span class="md-list-heading">
                  {% if student.creator %}{{ student.creator }}
                  {% else %}
                    {{ "author.creator.empty"|trans }}{% endif %}
                </span>
                <span class="uk-text-small uk-text-muted">{{ 'author.creator'|trans }}</span>
              </div>
            </li>
            <li>
              <div class="md-list-addon-element">
                <i class="md-list-addon-icon material-icons">&#xE8DF;</i>
              </div>
              <div class="md-list-content">
                <span class="md-list-heading">
                  {% if student.created %}{{ student.created|date('d M Y') }}{% endif %}
                </span>
                <span class="uk-text-small uk-text-muted">{{ 'author.created'|trans }}</span>
              </div>
            </li>
            <li>
              <div class="md-list-addon-element">
                <i class="md-list-addon-icon material-icons">&#xE8B5;</i>
              </div>
              <div class="md-list-content">
                <span class="md-list-heading">
                  {% if student.updated %}{{ student.updated|date('d M Y') }}{% endif %}
                </span>
                <span class="uk-text-small uk-text-muted">{{ 'author.updated'|trans }}</span>
              </div>
            </li>

          </ul>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
