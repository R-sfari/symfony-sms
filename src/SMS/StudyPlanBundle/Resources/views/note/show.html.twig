{% extends 'layout/base.html.twig' %}

{% block heading_actions %}
    <a href="{{ path('note_edit', { 'id': note.id }) }}" data-uk-tooltip="{pos:'bottom'}" title="{{ 'action.edit'|trans }}"><i class="md-icon material-icons">&#xE254;</i></a>
    <a href="#" data-box="#delete" class="mb-control" data-uk-tooltip="{pos:'bottom'}" title="{{'action.delete'|trans }}"><i class="md-icon material-icons">&#xE872;</i></a>
{% endblock %}

{% block sticky_button %}
<a class="md-fab md-fab-primary" href="{{ path('note_index') }}">
    <i class="material-icons">&#xE145;</i>
</a>
{% endblock %}

{% block title_page %} 
 {{ 'note.show.title'|trans }}
{% endblock %}

{% block body %}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        
        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'note.show.detail'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list">
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{{ note.id }}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'note.field.id'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{{ note.mark }}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'note.field.mark'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{% if note.created %}{{ note.created|date('Y-m-d H:i:s') }}{% endif %}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'note.field.created'|trans }}</span>
                    </li>
                        <li>
                            <div class="md-list-content">
                            <span class="md-list-heading uk-text-large">{% if note.updated %}{{ note.updated|date('Y-m-d H:i:s') }}{% endif %}</span>
                        </div>
                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'note.field.updated'|trans }}</span>
                    </li>                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'author.info'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list md-list-addon">
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE7FD;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">{{ note.user.username }}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.creator'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8DF;</i>
                            </div>
                            <div class="md-list-content"><span class="md-list-heading">{% if note.created %}{{ note.created|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.updated'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8B5;</i>
                            </div>
                            <div class="md-list-content"><span class="md-list-heading">{% if note.created %}{{ note.created|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.created'|trans }}</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- MESSAGE BOX-->
    <div class="message-box animated fadeIn " data-sound="alert" id="delete">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title">
                    <i class="&#xE872; "></i> {{ 'delete.name'|trans({'%item%' : 'note.item'|trans }) }} ?
                </div>
                <div class="mb-content">
                    <p>{{ 'delete.message'|trans({'%item%' : 'note.item'|trans }) }}</p>
                </div>
                
                <div class="mb-footer">
                    <div class="uk-float-right">
                        <div class="md-btn-group">
                            {{ form_start(delete_form) }}
                            <button type="submit" class="md-btn md-btn-danger md-btn-medium md-btn-wave-light waves-effect waves-button waves-light">
                            <i class="icon-trash"></i>
                             {{ 'delete.yes'|trans }}
                            </button>
                            <button type="reset" class="md-btn md-btn-default md-btn-medium md-btn-wave-light waves-effect waves-button waves-light mb-control-close" >{{ 'delete.no'|trans }}</button>
                            {{ form_end(delete_form) }}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MESSAGE BOX-->
{% endblock %}
