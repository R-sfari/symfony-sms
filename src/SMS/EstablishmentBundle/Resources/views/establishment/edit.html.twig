{% extends 'layout/base_header_double_height.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <!-- additional styles for plugins -->
  <!-- dropify -->
  <link rel="stylesheet" href="{{ asset('assets/skins/dropify/css/dropify.css')}}">
{% endblock %}
{% block body %}

	{% include 'layout/form_layout.html.twig' with {'form': edit_form , 'form_name' : 'establishment.edit.title' , 'index_url': path('establishment_index')} %}

{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <!-- page specific plugins -->
  <!-- file input -->
  <script src="{{ asset('assets/plugins/dropify/dist/js/dropify.min.js')}}"></script>
  <script>
    $(function() {
      $(".dropify").dropify({
        'defaultFile': "{{ vich_uploader_asset(establishment, 'imageFile') }}",
        messages: {
          "default": "{{ 'file.upload_file'|trans }}",
          replace: "{{ 'file.upload_file'|trans }}",
          remove: "{{ 'delete'|trans }}"
        }
      });
    });
  </script>
{% endblock %}
