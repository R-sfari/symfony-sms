{% extends 'layout/base_no_header.html.twig' %}

{% block heading_actions %}
  <a href="{{ path('registration_index') }}">
    <i class="md-icon material-icons">&#xE5C4;</i>
  </a>
  <a href="{{ path('registration_new') }}">
    <i class="md-icon material-icons">&#xE5C8;</i>
  </a>
{% endblock %}

{% block sticky_button %}
<a class="md-fab md-fab-primary" href="">
    <i class="material-icons">&#xE254;</i>
</a>
{% endblock %}

{% block title_page %}
 {{ 'show.title'|trans }}
{% endblock %}

{% block body %}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>

        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
          <div class="md-card">
            <div class="user_heading">
              <div class="user_heading_avatar">
                <div class="fileinput-new thumbnail">
                  {% if student.imageName %}
                    <img src="{{ vich_uploader_asset(student, 'imageFile') }}" alt="{{ student.imageName }}"/>
                  {% else %}
                    <img src="{{ asset('assets/img/avatars/user@2x.png') }}" alt="user avatar"/>
                  {% endif %}
                </div>
              </div>
              <div class="user_heading_content">
                <h2 class="heading_b uk-margin-bottom">
                  <span class="uk-text-truncate">{{ student.username }}</span>
                  <span class="sub-heading">{{ student.firstName }}
                    {{ student.lastName }}</span>
                </h2>
              </div>
              <div class="md-fab-wrapper">
                <a class="md-fab md-fab-small md-fab-success" href="{{ path('registration_index') }}">
                  <i class="material-icons">&#xE88A;</i>
                </a>
              </div>
            </div>
            <div class="user_content">
              <h3 class="full_width_in_card heading_c">{{ 'show.payment_info'|trans }}</h3>
              {{ datatable_render(payments) }}
            </div>
          </div>
        </div>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'author.info'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list md-list-addon">
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE7FD;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">{{ student.user.username }}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.creator'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8DF;</i>
                            </div>
                            <div class="md-list-content"><span class="md-list-heading">{% if student.updated %}{{ student.updated|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.updated'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8B5;</i>
                            </div>
                            <div class="md-list-content"><span class="md-list-heading">{% if student.created %}{{ student.created|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.created'|trans }}</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block head_javascripts %}
  {{ parent() }}
  <!-- page specific plugins -->
  <!-- datatables -->
  <script src="{{ asset('assets/plugins/datatables/js/jquery.dataTables.min.js')}}"></script>
  <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
  <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
  <!--  form file input functions -->
  <!-- uikit functions -->
  <script src="{{ asset('assets/js/uikit_custom.min.js')}}"></script>
{% endblock %}
{% block javascripts %}
  <!-- altair common functions/helpers -->
  <script src="{{ asset('assets/js/altair_admin_common.min.js')}}"></script>
  <!-- datatables custom integration -->
  <script src="{{ asset('assets/js/custom/datatables/datatables.uikit.min.js')}}"></script>
  <script src="{{ asset('assets/js/uikit_custom_dataTable.js')}}"></script>
{% endblock %}
