{% extends 'layout/base.html.twig' %}

{% block sticky_button %}
<a class="md-fab md-fab-primary" href="{{ path('studentparent_new') }}">
    <i class="material-icons">&#xE145;</i>
</a>
{% endblock %}

{% block title_page %} 
 {{ 'studentparent.list.title'|trans }}
{% endblock %}

{% block body %}
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-content">
            <div class="dataTables_wrapper form-inline dt-uikit md-processed">
                <div class="dt-uikit-header">
                    <div class="uk-grid">
                        <div class="uk-width-medium-2-3">
                            <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click'}">
                                <button class="md-btn"><b>{{'action.name'|trans }}</b> <i class="material-icons">&#xE313;</i></button>
                                <div class="uk-dropdown uk-dropdown-small">
                                    <ul class="uk-nav uk-nav-dropdown">
                                        <li>
                                            <a data-box="#delete" class="mb-control" href="#">
                                                <i class="uk-icon-trash"></i> {{'action.delete'|trans }}
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="uk-width-medium-1-3">
                            <div id="dt_individual_search_filter" class="dataTables_filter">
                                <div class="md-input-wrapper">
                                    <form action="{{ path('studentparent_index') }}" method="get">
                                        <input type="search" name="search" class="md-input" placeholder="{{'index.search'|trans }}" value="{{ search }}" aria-controls="dt_individual_search">
                                        <span class="md-input-bar "></span>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="uk-overflow-container">
                    <form action="{{ path('studentparent_bulk_action') }}" method="post">
                        <table id="dt_individual_search" class="uk-table dataTable table_check" role="grid" aria-describedby="dt_individual_search_info">
                            <thead>
                                <tr role="row">
                                    <th class="uk-text-center small_col">
                                        <input type="checkbox" data-md-icheck class="check_all">
                                    </th>
                                        <th {% if studentParents.isSorted('f.fatherName') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.fatherName', 'f.fatherName') }}</th>
                                        <th {% if studentParents.isSorted('f.motherName') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.motherName', 'f.motherName') }}</th>
                                        <th {% if studentParents.isSorted('f.familyName') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.familyName', 'f.familyName') }}</th>
                                        <th {% if studentParents.isSorted('f.fatherProfession') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.fatherProfession', 'f.fatherProfession') }}</th>
                                        <th {% if studentParents.isSorted('f.motherProfession') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.motherProfession', 'f.motherProfession') }}</th>
                                        <th {% if studentParents.isSorted('f.address') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.address', 'f.address') }}</th>
                                        <th {% if studentParents.isSorted('f.phone') %}{% if  studentParents.direction == 'asc' %} class='sorting_asc uk-text-center' {% else %} class='sorting_desc uk-text-center'{% endif %}{% else %}class='sorting uk-text-center'{% endif %}>
                                            {{ knp_pagination_sortable(studentParents, 'studentparents.field.phone', 'f.phone') }}</th>
                                    <th class="uk-text-center">{{'action.name'|trans }}</th>
                                </tr>
                            </thead>

                            <tbody>
                        
                                {% for studentParent in studentParents %}
                                    <tr>
                                    <td class="uk-text-center uk-table-middle small_col">
                                            <input type="checkbox" name="{{keys}}" value="{{ studentParent.id }}" data-md-icheck class="check_row"></td>
                                        <td class="uk-text-center"><a href="{{ path('studentparent_show', { 'id': studentParent.id }) }}">{{ studentParent.fatherName }}</a></td>
                                        <td class="uk-text-center">{{ studentParent.motherName }}</td>
                                        <td class="uk-text-center">{{ studentParent.familyName }}</td>
                                        <td class="uk-text-center">{{ studentParent.fatherProfession }}</td>
                                        <td class="uk-text-center">{{ studentParent.motherProfession }}</td>
                                        <td class="uk-text-center">{{ studentParent.address }}</td>
                                        <td class="uk-text-center">{{ studentParent.phone }}</td>
                                        <td class="uk-text-center">
                                            <a data-uk-tooltip="{pos:'top'}" title="{{'action.show'|trans }}" href="{{ path('studentparent_show', { 'id': studentParent.id }) }}"><i class="md-icon material-icons" >&#xE8F4;</i></a>
                                            
                                            <a data-uk-tooltip="{pos:'top'}" title="{{'action.edit'|trans }}" href="{{ path('studentparent_edit', { 'id': studentParent.id }) }}"><i class="md-icon material-icons">&#xE254;</i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <!-- MESSAGE BOX-->
                                    <div class="message-box animated fadeIn " data-sound="alert" id="delete">
                                        <div class="mb-container">
                                            <div class="mb-middle">
                                                <div class="uk-float-left">
                                                    <div class="mb-title">
                                                        <i class="uk-icon-trash "></i> {{ 'delete.name'|trans({'%item%' : 'studentparent.item'|trans }) }} ?
                                                    </div>
                                                    <div class="mb-content">
                                                        <p>{{ 'delete.message'|trans({'%item%' : 'studentparent.item'|trans }) }}</p>
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-footer">
                                                    <div class="uk-float-right">
                                                        <div class="md-btn-group">
                                                            <input type="hidden" name="{{actions}}" value="{{ delete}}">
                                                            <button type="submit" class="md-btn md-btn-danger md-btn-medium md-btn-wave-light waves-effect waves-button waves-light">
                                                            <i class="icon-trash"></i>
                                                             {{ 'delete.yes'|trans }}
                                                            </button>
                                                            <button type="reset" class="md-btn md-btn-default md-btn-medium md-btn-wave-light waves-effect waves-button waves-light mb-control-close" >{{ 'delete.no'|trans }}</button>
                                                        </div>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <!-- END MESSAGE BOX-->
                            </tbody>
                        </table>
                    </form>
                </div>
                <div class="dt-uikit-footer">
                    <div class="uk-grid">
                        <div class="uk-width-medium-3-10">
                            <div class="dataTables_info" id="dt_individual_search_info" role="status" aria-live="polite">{{ 'index.count'|trans({ '%per_page%' : per_page , '%total%' : studentParents.getTotalItemCount})}}</div>
                        </div>
                        <div class="uk-width-medium-7-10">
                            <div class="simple_numbers" id="dt_individual_search_paginate">
                                {{ knp_pagination_render(studentParents) }}
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
