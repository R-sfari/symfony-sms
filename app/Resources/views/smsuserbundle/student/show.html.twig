{% extends 'layout/base.html.twig' %}

{% block heading_actions %}
    <a href="{{ path('student_edit', { 'id': student.id }) }}" data-uk-tooltip="{pos:'bottom'}" title="{{ 'action.edit'|trans }}"><i class="md-icon material-icons">&#xE254;</i></a>
    <a href="#" data-box="#delete" class="mb-control" data-uk-tooltip="{pos:'bottom'}" title="{{'action.delete'|trans }}"><i class="md-icon material-icons">&#xE872;</i></a>
{% endblock %}

{% block sticky_button %}
<a class="md-fab md-fab-primary" href="{{ path('student_index') }}">
    <i class="material-icons">&#xE5C4;</i>
</a>
{% endblock %}

{% block title_page %} 
 {{ 'student.show.title'|trans }}
{% endblock %}

{% block body %}
    <div class="uk-grid" data-uk-grid-margin data-uk-grid-match id="user_profile">
        <div class="uk-width-large-7-10">
            <div class="md-card">
                <div class="user_heading">
                    <div class="user_heading_avatar fileinput fileinput-new">
                        <div class="fileinput-new thumbnail">
                            {% if student.imageName %}
                                <img src="{{ vich_uploader_asset(student, 'imageFile') }}" alt="{{ student.imageName }}" />
                            {% else %}
                                <img src="{{ asset('assets/img/avatars/user@2x.png') }}" alt="user avatar"/>
                            {% endif %}
                        </div>
                    </div>
                    <div class="user_heading_content">
                        <h2 class="heading_b uk-margin-bottom">
                            <span class="uk-text-truncate">{{ student.username }}</span>
                            <span class="sub-heading">{{ student.firstName }} {{ student.lastName }}</span></h2>
                    </div>
                    
                </div>
                <div class="user_content">
                    <h3 class="full_width_in_card heading_c">{{ 'user.show.general_info'|trans }}</h3>
                    <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                        <div class="uk-width-large-1-2">
                            <ul class="md-list">
                                <li>
                                    <div class="md-list-content">
                                        
                                        <span class="md-list-heading uk-text-large">{{ student.firstName }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'student.field.firstName'|trans }}</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="md-list-content">
                                        
                                        <span class="md-list-heading uk-text-large">{{ student.gender }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'student.field.gender'|trans }}</span>
                                    </div>
                                </li>
                                
                            </ul>
                        </div>
                        <div class="uk-width-large-1-2">
                            <ul class="md-list">
                                <li>
                                    <div class="md-list-content">
                                        
                                        <span class="md-list-heading uk-text-large">{{ student.lastName }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'student.field.lastName'|trans }}</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="md-list-content">
                                        
                                        <span class="md-list-heading uk-text-large">{% if student.birthday %}{{ student.birthday|date('d/m/Y') }}{% endif %}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'student.field.birthday'|trans }}</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        
                    </div>
                    <h3 class="full_width_in_card heading_c">{{ 'user.show.parent_info'|trans }}</h3>
                    <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                        <div class="uk-width-large-1-2">
                            <ul class="md-list">
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.fatherName }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.fatherName'|trans }}</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.fatherProfession }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.fatherProfession'|trans }}</span>
                                    </div>
                                </li>
                                
                            </ul>
                        </div>
                        <div class="uk-width-large-1-2">
                            <ul class="md-list">
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.motherName }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.motherName'|trans }}</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.motherProfession }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.motherProfession'|trans }}</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="uk-width-large-1-1">
                            <ul class="md-list">
                                <li>
                                    <div class="md-list-content">
                                        
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.familyName }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.familyName'|trans }}</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <h3 class="full_width_in_card heading_c">{{ 'user.show.contact_info'|trans }}</h3>
                    <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                        <div class="uk-width-large-1-2">
                            <ul class="md-list md-list-addon">
                                <li>
                                    <div class="md-list-content">
                                        <div class="md-list-addon-element">
                                            <i class="md-list-addon-icon material-icons">&#xE0BE;</i>
                                        </div>
                                        <span class="md-list-heading uk-text-large">{{ student.email }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'user.field.email'|trans }}</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="md-list-content">
                                        <div class="md-list-addon-element">
                                            <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
                                        </div>
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.phone }}
                                        </span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.phone'|trans }}</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="uk-width-large-1-2">
                            <ul class="md-list md-list-addon">
                                <li>
                                    <div class="md-list-content">
                                        <div class="md-list-addon-element">
                                            <i class="md-list-addon-icon material-icons">&#xE0BE;</i>
                                        </div>
                                        <span class="md-list-heading uk-text-large">{{ student.recordeNumber }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block">  {{'student.field.recordeNumber'|trans }}</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="md-list-content">
                                        <div class="md-list-addon-element">
                                            <i class="md-list-addon-icon material-icons">&#xE55C;</i>
                                        </div>
                                        
                                        <span class="md-list-heading uk-text-large">{{ student.studentParent.address }}</span>
                                        <span class="uk-text-small uk-text-muted uk-display-block"> {{'studentparent.field.address'|trans }}</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <ul class="md-list md-list-addon">
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE7FD;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">Sonny Upton</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.creator'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8DF;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">{% if student.created %}{{ student.created|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.created'|trans }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8B5;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">{% if student.updated %}{{ student.updated|date('d M Y') }}{% endif %}</span>
                                <span class="uk-text-small uk-text-muted">{{ 'author.updated'|trans }}</span>
                            </div>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- MESSAGE BOX-->
    <div class="message-box animated fadeIn " data-sound="alert" id="delete">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title">
                    <i class="uk-icon-trash "></i> {{ 'delete.name'|trans({'%item%' : 'student.item'|trans }) }} ?
                </div>
                <div class="mb-content">
                    <p>{{ 'delete.message'|trans({'%item%' : 'student.item'|trans }) }}</p>
                </div>
                
                <div class="mb-footer">
                    <div class="uk-float-right">
                        <div class="md-btn-group">
                            {{ form_start(delete_form) }}
                            <button type="submit" class="md-btn md-btn-danger md-btn-medium md-btn-wave-light waves-effect waves-button waves-light">
                            <i class="icon-trash"></i>
                             {{ 'delete.yes'|trans }}
                            </button>
                            <button type="reset" class="md-btn md-btn-default md-btn-medium md-btn-wave-light waves-effect waves-button waves-light mb-control-close" >{{ 'delete.no'|trans }}</button>
                            {{ form_end(delete_form) }}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MESSAGE BOX-->
    
{% endblock %}
