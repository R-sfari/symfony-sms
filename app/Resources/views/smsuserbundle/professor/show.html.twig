{% extends 'layout/base.html.twig' %}

{% block heading_actions %}
    <a href="{{ path('professor_edit', { 'id': professor.id }) }}" data-uk-tooltip="{pos:'bottom'}" title="{{ 'action.edit'|trans }}"><i class="md-icon material-icons">&#xE254;</i></a>
    <a href="#" data-box="#delete" class="mb-control" data-uk-tooltip="{pos:'bottom'}" title="{{'action.delete'|trans }}"><i class="md-icon material-icons">&#xE872;</i></a>
{% endblock %}

{% block sticky_button %}
<a class="md-fab md-fab-primary" href="{{ path('professor_index') }}">
    <i class="material-icons">&#xE145;</i>
</a>
{% endblock %}

{% block title_page %} 
 {{ 'professor.show.title'|trans }}
{% endblock %}

{% block body %}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        
        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'professor.show.detail'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list">
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.firstName'|trans }}</span>
                            <th>Firstname</th>
                            <span class="md-list-heading uk-text-large">{{ professor.firstName }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.lastName'|trans }}</span>
                            <th>Lastname</th>
                            <span class="md-list-heading uk-text-large">{{ professor.lastName }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.gender'|trans }}</span>
                            <th>Gender</th>
                            <span class="md-list-heading uk-text-large">{{ professor.gender }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.birthday'|trans }}</span>
                            <th>Birthday</th>
                            <span class="md-list-heading uk-text-large">{% if professor.birthday %}{{ professor.birthday|date('Y-m-d') }}{% endif %}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.phone'|trans }}</span>
                            <th>Phone</th>
                            <span class="md-list-heading uk-text-large">{{ professor.phone }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.address'|trans }}</span>
                            <th>Address</th>
                            <span class="md-list-heading uk-text-large">{{ professor.address }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.grade'|trans }}</span>
                            <th>Grade</th>
                            <span class="md-list-heading uk-text-large">{{ professor.grade }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.id'|trans }}</span>
                            <th>Id</th>
                            <span class="md-list-heading uk-text-large">{{ professor.id }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.username'|trans }}</span>
                            <th>Username</th>
                            <span class="md-list-heading uk-text-large">{{ professor.username }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.usernameCanonical'|trans }}</span>
                            <th>Usernamecanonical</th>
                            <span class="md-list-heading uk-text-large">{{ professor.usernameCanonical }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.email'|trans }}</span>
                            <th>Email</th>
                            <span class="md-list-heading uk-text-large">{{ professor.email }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.emailCanonical'|trans }}</span>
                            <th>Emailcanonical</th>
                            <span class="md-list-heading uk-text-large">{{ professor.emailCanonical }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.enabled'|trans }}</span>
                            <th>Enabled</th>
                            <span class="md-list-heading uk-text-large">{% if professor.enabled %}Yes{% else %}No{% endif %}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.salt'|trans }}</span>
                            <th>Salt</th>
                            <span class="md-list-heading uk-text-large">{{ professor.salt }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.password'|trans }}</span>
                            <th>Password</th>
                            <span class="md-list-heading uk-text-large">{{ professor.password }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.lastLogin'|trans }}</span>
                            <th>Lastlogin</th>
                            <span class="md-list-heading uk-text-large">{% if professor.lastLogin %}{{ professor.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.confirmationToken'|trans }}</span>
                            <th>Confirmationtoken</th>
                            <span class="md-list-heading uk-text-large">{{ professor.confirmationToken }}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.passwordRequestedAt'|trans }}</span>
                            <th>Passwordrequestedat</th>
                            <span class="md-list-heading uk-text-large">{% if professor.passwordRequestedAt %}{{ professor.passwordRequestedAt|date('Y-m-d H:i:s') }}{% endif %}</span>                        </div>
                            </li>
                        <li>
                            <div class="md-list-content">
                                <span class="uk-text-small uk-text-muted uk-display-block"> {{'professor.field.roles'|trans }}</span>
                            <th>Roles</th>
                            <span class="md-list-heading uk-text-large">{% if professor.roles %}{{ professor.roles|join(', ') }}{% endif %}</span>                        </div>
                            </li>                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        {{ 'author.info'|trans }}
                    </h3>
                </div>
                <div class="md-card-content">
                    <ul class="md-list md-list-addon">
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE7FD;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">Sonny Upton</span>
                                <span class="uk-text-small uk-text-muted">Assignee</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8DF;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">14 Jun 2015</span>
                                <span class="uk-text-small uk-text-muted">Created</span>
                            </div>
                        </li>
                        <li>
                            <div class="md-list-addon-element">
                                <i class="md-list-addon-icon material-icons">&#xE8B5;</i>
                            </div>
                            <div class="md-list-content">
                                <span class="md-list-heading">18 Jun 2015</span>
                                <span class="uk-text-small uk-text-muted">Updated</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- MESSAGE BOX-->
    <div class="message-box animated fadeIn " data-sound="alert" id="delete">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title">
                    <i class="uk-icon-trash "></i> {{ 'delete.name'|trans({'%item%' : 'professor.item'|trans }) }} ?
                </div>
                <div class="mb-content">
                    <p>{{ 'delete.message'|trans({'%item%' : 'professor.item'|trans }) }}</p>
                </div>
                
                <div class="mb-footer">
                    <div class="uk-float-right">
                        <div class="md-btn-group">
                            {{ form_start(delete_form) }}
                            <button type="submit" class="md-btn md-btn-danger md-btn-medium md-btn-wave-light waves-effect waves-button waves-light">
                            <i class="icon-trash"></i>
                             {{ 'delete.yes'|trans }}
                            </button>
                            <button type="reset" class="md-btn md-btn-default md-btn-medium md-btn-wave-light waves-effect waves-button waves-light mb-control-close" >{{ 'delete.no'|trans }}</button>
                            {{ form_end(delete_form) }}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MESSAGE BOX-->
{% endblock %}
