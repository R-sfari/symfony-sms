<!-- main sidebar -->
<aside id="sidebar_main">
    <div class="sidebar_main_header">
        {% if app.session.get('_logo') is null  %}
        <div class="sidebar_logo">
            <a href="#" class="sSidebar_hide sidebar_logo_large">
                <img class="logo_regular" src="{{ asset('assets/img/logo_main.png')}}" alt="" height="15" width="71"/>
                <img class="logo_light" src="{{ asset('assets/img/logo_main.png')}}" alt="" height="15" width="71"/>
            </a>
            <a href="#" class="sSidebar_show sidebar_logo_small">
                <img class="logo_regular" src="{{ asset('assets/img/logo_main.png')}}" alt="" height="32" width="32"/>
                <img class="logo_light" src="{{ asset('assets/img/logo_main.png')}}" alt="" height="32" width="32"/>
            </a>
        </div>
        {% else %}
        <div class="sidebar_logo">
            <a href="#" class="sSidebar_hide sidebar_logo_large">
                <img class="logo_regular" src="{{ app.session.get("_logo") }}" alt="" height="15" width="71"/>
                <img class="logo_light" src="{{ app.session.get("_logo") }}" alt="" height="15" width="71"/>
            </a>
            <a href="#" class="sSidebar_show sidebar_logo_small">
                <img class="logo_regular" src="{{ app.session.get("_logo") }}" alt="" height="32" width="32"/>
                <img class="logo_light" src="{{ app.session.get("_logo") }}" alt="" height="32" width="32"/>
            </a>
        </div>
        {% endif %}
        <div class="sidebar_actions">
          <form id="lang_form" method="post" action="{{ path("translate_page") }}">
            <select id="lang_switcher" name="lang_switcher">
                <option value="{{app.session.get("_locale") == "en" or app.session.get("_locale") == "" ? "gb" : app.session.get("_locale")}}" selected></option>
            </select>
          </form>
        </div>
    </div>

    <div class="menu_section">
        {{ knp_menu_render('main' , { 'template': 'menu/knp_menu.html.twig' , 'currentClass': 'act_item current_section'}) }}
    </div>
</aside>
