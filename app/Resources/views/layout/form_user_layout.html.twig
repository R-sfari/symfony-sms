{{ form_start(form) }}
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-large-3-10 uk-margin-medium-bottom">
            <div class="md-card">
                <div class="md-card-content">
                    <h3 class="heading_c uk-margin-medium-bottom">{{ "user.setting"|trans}}</h3>
                    <div class="uk-form-row">
                        {{ form_widget(form.show_username_password, { 'attr': {'data-switchery-color': '#d32f2f' , "data-switchery-size" : "small" , "class" : "show_username_password" ,  "data-switchery" : ""} }) }}
                        <label for="show_username_password" class="inline-label">{{ form_label(form.show_username_password) }}</label>
                    </div>
                    <hr class="md-hr">
                    {% if form.username is defined and form.plainPassword is defined %}
                        <div class="uk-form-row">
                            <label class="uk-form-label">{{ form_label(form.username) }}</label>
                            {{ form_widget(form.username)}}
                            <div class="parsley-errors-list filled uk-text-danger">
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                        <div class="uk-form-row">
                            <label class="uk-form-label">{{ form_label(form.plainPassword) }}</label>
                            {{ form_widget(form.plainPassword)}}
                            <div class="parsley-errors-list filled uk-text-danger">
                                {{ form_errors(form.plainPassword) }}
                            </div>
                        </div>
                    {% endif %}
                    
                </div>
            </div>
        </div>
        <div class="uk-width-large-7-10">
            <div class="md-card">
                <div class="user_heading">
                    <div class="user_heading_avatar fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new thumbnail">
                            <img src="{{ asset('assets/img/avatars/user@2x.png') }}" alt="user avatar"/>
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail"></div>
                        <div class="user_avatar_controls">
                            <span class="btn-file">
                                <span class="fileinput-new"><i class="material-icons">&#xE2C6;</i></span>
                                <span class="fileinput-exists"><i class="material-icons">&#xE86A;</i></span>
                                {{ form_widget(form.imageFile , { 'attr' : { 'id' : 'user_edit_avatar_control'}}) }}
                            </span>
                            <a href="#" class="btn-file fileinput-exists" data-dismiss="fileinput"><i class="material-icons">&#xE5CD;</i></a>
                        </div>
                    </div>
                    <div class="user_heading_content">
                        <h2 class="heading_b">
                            <span class="uk-text-truncate" id="user_edit_uname">
                                {{ form_name|trans }}
                            </span>
                        </h2>
                    </div>
                    <div class="md-fab-wrapper">
                        <a class="md-fab md-fab-small md-fab-success" href="{{ index_url }}">
                            <i class="material-icons">&#xE88A;</i>
                        </a>
                    </div>
                </div>
                <div class="user_content">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
        
    </div>
 {{ form_end(form) }}