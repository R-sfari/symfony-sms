{{ form_start(form) }}
    <div class="uk-width-medium-8-10 uk-container-center">
        <div class="md-card md-card-single">
            <div class="md-card-toolbar">
                <div class="md-card-toolbar-actions">
                    <div class="uk-margin-small-top">
                        <div class="uk-form-row">
                        {{ form_widget(form.by_student, { 'attr': {"data-switchery-size" : "small"} }) }}
                        <label class="inline-label">{{ form_label(form.by_student) }}</label>
                        </div>
                    </div>
                </div>
                <h3 class="md-card-toolbar-heading-text large uk-margin-small-left">
                     {{ form_name }}
                </h3>
            </div>
            <div class="md-card-content">
                <div class="uk-margin-large-bottom">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}