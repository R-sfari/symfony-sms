<!doctype html>
<!--[if lte IE 9]> <html class="lte-ie9" lang="en"> <![endif]-->
<!--[if gt IE 9]><!--> <html lang="en"> <!--<![endif]-->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Remove Tap Highlight on Windows Phone IE -->
    <meta name="msapplication-tap-highlight" content="no"/>

    <link rel="icon" type="image/png" href="{{ asset('assets/img/favicon-16x16.png')}}" sizes="16x16">
    <link rel="icon" type="image/png" href="{{ asset('assets/img/favicon-32x32.png')}}" sizes="32x32">

    <title>Altair Admin v2.9.1</title>
    
    {% block stylesheets %}
        <!-- uikit -->
        <link rel="stylesheet" href="{{ asset('assets/css/uikit.almost-flat.min.css') }}" media="all">

        <!-- flag icons -->
        <link rel="stylesheet" href="{{ asset('assets/icons/flags/flags.min.css') }}" media="all">
        
        <!-- altair admin -->
        <link rel="stylesheet" href="{{ asset('assets/css/main.min.css') }}" media="all">

        <!-- altair notifiaction -->
        <link rel="stylesheet" href="{{ asset('assets/css/notification.css') }}" />

        <!-- themes -->
        <link rel="stylesheet" href="{{ asset('assets/css/themes/themes_combined.min.css') }}" media="all">

        <!-- matchMedia polyfill for testing media queries in JS -->
        <!--[if lte IE 9]>
            <script type="text/javascript" src="bower_components/matchMedia/matchMedia.js"></script>
            <script type="text/javascript" src="bower_components/matchMedia/matchMedia.addListener.js"></script>
            <link rel="stylesheet" href="assets/css/ie.css" media="all">
        <![endif]-->
    {% endblock %}

</head>
<body class="sidebar_main_open sidebar_main_swipe">

    <!-- main header -->
    {% include 'layout/header.html.twig' %}
    <!-- main header end -->

     <!-- main sidebar -->
    {% include 'layout/sidebar_main.html.twig' %}
    <!-- main sidebar end -->

    <div id="page_content">
        <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
            <div class="heading_actions">
                {% block heading_actions %}{% endblock %}
            </div>
            <h1 id="product_edit_name">{% block title_page %}{% endblock %}</h1>
            <span class="uk-text-muted uk-text-upper uk-text-small" id="product_edit_sn">{% block sub_title_page %}<a href="">dashbord</a>{% endblock %}</span>
        </div>
        <div id="page_content_inner">
            
            <!-- main flash success message -->
            {% for flash_message in app.session.flashbag.get(msg_success) %}
                <div class="uk-alert" data-uk-alert>
                    <a href="#" class="uk-alert-close uk-close"></a>
                    {{ flash_message }}
                </div>
            {% endfor %}
            <!-- main flash success message end -->

            <!-- main flash success message -->
            {% for flash_message in app.session.flashbag.get(msg_danger) %}
                <div class="uk-alert uk-alert-danger" data-uk-alert>
                    <a href="#" class="uk-alert-close uk-close"></a>
                    {{ flash_message }}
                </div>
            {% endfor %}
            <!-- main flash success message end -->

            {% block body %}

            {% endblock %}
        </div>
    </div>

    <div class="md-fab-wrapper">
        {% block sticky_button %}

        {% endblock %}
    </div>
    <!-- main sidebar -->
    {% include 'layout/sidebar.html.twig' %}
    <!-- main sidebar end -->
    {% block javascripts %}

        <!-- common functions -->
        <script src="{{ asset('assets/js/common.min.js')}}"></script>
        <!-- uikit functions -->
        <script src="{{ asset('assets/js/uikit_custom.min.js')}}"></script>
        <!-- altair common functions/helpers -->
        <script src="{{ asset('assets/js/altair_admin_common.min.js')}}"></script>
        <!-- sms Web Socket-->
        <script src='{{ asset('assets/websocket/autobahn.min.js')}}'></script>
        <script src='{{ asset('assets/websocket/gos_web_socket_client.js')}}'></script>
    {% endblock %}

    {% block audio %}
        <audio id="audio-alert" src="{{ asset('assets/audio/alert.mp3')}}" preload="auto">
        </audio>
        <audio id="audio-fail" src="{{ asset('assets/audio/fail.mp3')}}" preload="auto">
        </audio>
        <audio id="audio-newMessage" src="{{ asset('assets/audio/newMessage.wav')}}" preload="auto">
        </audio>
    {% endblock %}
</body>
</html>